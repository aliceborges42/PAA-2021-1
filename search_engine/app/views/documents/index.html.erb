<h2>Resultados da busca</h2>

<h4>Fazer pesquisa:</h4>

<%= search_form_for @q do |f| %>
  <%= f.label :title_or_body_cont %>
  <%= f.search_field :title_or_body_cont %>
  <%= f.submit %>
<% end %>

<ul>
  <% @documents.each do |document| %>
      <li><%= link_to document.title, document.url, target: :_blank %></li>
      <% if document.body.index(params[:q][:title_or_body_cont]) != nil %>
        <p><%= document.body[document.body.index(params[:q][:title_or_body_cont]), 100] %></p>
      <% end %>
  <% end %>
